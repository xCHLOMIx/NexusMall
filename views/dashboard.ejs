<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="Styles/dashboard.css">
    <title>NexusMall</title>
</head>

<body>
    <nav>
        <div class="logo"><img src="Images/Exclusion 1.png" alt="" id="logo"></div>
        <div class="links">
            <a href="/dashboard"><img src="Icons/dashboard.png" id="home"></a>
            <a href="/users"><img src="Icons/users.png" id="other"></a>
            <a href="/products-admin"><img src="Icons/box.png" id="other"></a>
            <a href="/admin-orders"><img src="Icons/clipboard.png" id="other"></a>
        </div>
        <div class="logout"><a href="/logout"><img src="Icons/logout.png" id="logout"></a></div>
    </nav>
    <div class="content">
        <div class="title">
            <h1>Dashboard</h1>
        </div>
        <div class="details">
            <div class="show">
                <div class="view">
                    <h1 id="title">Users</h1><br>
                    <h1><%= users.length %></h1>
                    <p>Active Users</p>
                </div>
                <div class="view">
                    <h1 id="title">Products</h1><br>
                    <h1><%= products.length %></h1>
                    <p>In Stock</p>
                </div>
                <div class="view">
                    <h1 id="title">Orders</h1><br>
                    <h1><%= pendingOrders.length %></h1>
                    <p>Pending orders</p>
                </div>
            </div>
            <div class="other">
                <div class="users">
                    <h1>Users:</h1><br>
                    <div class="user">
                        <div class="img">
                            <img src="icons/user.png" alt="">
                        </div>

                        <div class="desc">
                            <div class="text"><b>Username:</b>
                                <p><%= users[0].username %></p>
                            </div>
                            <div class="text"><b>First Name:</b>
                                <p><%= users[0].firstname %></p>
                            </div>
                            <div class="text"><b>Last Name(s):</b>
                                <p><%= users[0].lastname %></p>
                            </div>
                            <div class="text"><b>E-mail:</b>
                                <p><%= users[0].email %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="products">
                    <div class="showcase">
                        <div class="img"><img src="data:<%= products[0].image.contentType %>;base64,<%= products[0].image.data.toString('base64') %>" alt="">
                        </div>
                        <div class="text">
                            <h1>
                                <%= products[0].productName %>
                            </h1><br>
                            <b>PRICE:</b>
                            <p>$<%= products[0].unitPrice %>
                            </p>
                            <button><img src="Icons/cart.png" alt="Order NOW!"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>